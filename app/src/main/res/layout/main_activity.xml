<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/petbg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/petavatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <ImageButton
                    android:id="@+id/add_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="Add a Pet"
                    android:onClick="gotoAddPetPage"
                    android:src="@drawable/add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tips_advice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tips and Advice"
                    android:onClick="gotoTips"
                    android:src="@drawable/tips" />

                <ImageButton
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:contentDescription="Settings"
                    android:onClick="gotoSettings"
                    android:src="@drawable/setting" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:layout_marginTop="30dp"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:background="@drawable/upcoming_schedule"
           >

            <TextView
                android:id="@+id/recentScheduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="Upcoming Schedule"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recentTaskTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:text="Time"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/recentTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:text="Task"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/imageViews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/petSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"
                android:gravity="start|end"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button"
                    android:layout_weight="0"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="15dp"
                    android:text="Edit" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/primary_button"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="15dp"
                    android:text="Delete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"
                android:orientation="horizontal">

            <Button
                android:id="@+id/journal"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/primary_button"
                android:onClick="gotojournal"
                android:padding="20dp"
                android:text="Journal"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/schedule"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="20dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/primary_button"
                android:text="Schedule"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>