<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1"
        android:textSize="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potty Training"
                android:paddingRight="150dp"/>

            <Button
                android:id="@+id/tableBut1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crate Training" />

            <Button
                android:id="@+id/tableBut2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training" />

            <Button
                android:id="@+id/tableBut3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training Supplies" />

            <Button
                android:id="@+id/tableBut4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socialization" />

            <Button
                android:id="@+id/tableBut5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health and Safety" />

            <Button
                android:id="@+id/tableBut6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grooming" />

            <Button
                android:id="@+id/tableBut7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View" />
        </TableRow>
    </TableLayout>


</LinearLayout>